{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "System.Data": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 10,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "QuotaExceededMessage": "Has superado el límite de solicitudes. Inténtalo más tarde.",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/api/validation/test-connection",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "GET:/api/validation/validate-customer/*",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "GET:/api/validation/customer-payments/*/*",
        "Period": "1m",
        "Limit": 2
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "InformixConnection": "Server=192.168.20.4:1572;Database=maindb;uid=wlucumi;pwd=WdpL5832!;"
  }
}
